<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net4.8</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Edit.svg" />
    <None Remove="Assets\RotateLeft.svg" />
    <None Remove="Assets\RotateRight.svg" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FileExplorer.Extension\FileExplorer.Extension.csproj" />
  </ItemGroup>
    
  <ItemGroup>
    <PackageReference Include="DevExpress.Wpf.Core" Version="23.1.*-*">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="DevExpress.Utils.v23.1">
      <HintPath>C:\Program Files\DevExpress 23.1\Components\Bin\Framework\DevExpress.Utils.v23.1.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="DevExpress.XtraEditors.v23.1">
      <HintPath>C:\Program Files\DevExpress 23.1\Components\Bin\Framework\DevExpress.XtraEditors.v23.1.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="System.ComponentModel.Composition" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Edit.svg" />
    <Resource Include="Assets\RotateLeft.svg" />
    <Resource Include="Assets\RotateRight.svg" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y &quot;$(TargetDir)*.dll&quot; &quot;$(SolutionDir)FileExplorer\bin\$(ConfigurationName)\PreviewExtensions\$(ProjectName)\&quot;" />
  </Target>

</Project>
