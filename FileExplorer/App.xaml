<Application x:Class="FileExplorer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:resources="clr-namespace:FileExplorer.Resources"
             xmlns:dxrt="http://schemas.devexpress.com/winfx/2008/xaml/ribbon/themekeys"
             ShutdownMode="OnExplicitShutdown">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <x:Static x:Key="ResourceProvider" Member="resources:CultureResources.ObjectDataProvider" />
                </ResourceDictionary>                
                <ResourceDictionary Source="/Resources/ResourceDictionary.xaml" />
                <LWThemeDictionary Office2019Black="pack://application:,,,/Resources/ThemeOffice2019Black.xaml"
                                   Office2019Colorful="pack://application:,,,/Resources/ThemeOffice2019Colorful.xaml"
                                   VS2019Dark="pack://application:,,,/Resources/ThemeVS2019Dark.xaml"
                                   VS2019Light="pack://application:,,,/Resources/ThemeVS2019Light.xaml"
                                   Win10Dark="pack://application:,,,/Resources/ThemeWin10Dark.xaml"
                                   Win10Light="pack://application:,,,/Resources/ThemeWin10Light.xaml"
                                   Win11Dark="pack://application:,,,/Resources/ThemeWin11Dark.xaml"
                                   Win11Light="pack://application:,,,/Resources/ThemeWin11Light.xaml">
                </LWThemeDictionary>
                <ResourceDictionary>
                    <Style x:Key="{dxrt:LWKey Ribbon.HoverPageCaptionTextStyle}" TargetType="{x:Type ContentControl}">
                        <Setter Property="Foreground" Value="{LWThemeValue Brush.Focused, Win11=Brush.Foreground.Primary}" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>        
    </Application.Resources>
    
</Application>
